# My postfix templates

# loggerDebug
.logdv : logdv
    java.lang.String    [org.slf4j.Logger]          → $log:variableOfType("org.slf4j.Logger"):"logger"$.debug($expr$);
    NUMBER              [org.slf4j.Logger]          → $log:variableOfType("org.slf4j.Logger"):"logger"$.debug("$expr$ = {}", $expr$);
    java.lang.Object    [org.slf4j.Logger]          → $log:variableOfType("org.slf4j.Logger"):"logger"$.debug("$expr$ = {}", $expr$);

